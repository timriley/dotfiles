// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "theme": {
    "light": "Catppuccin Latte - No Italics",
    "dark": "Catppuccin Mocha - No Italics"
  },
  "experimental.theme_overrides": {
    // https://github.com/zed-industries/zed/issues/15383
    // https://github.com/catppuccin/zed/pull/28
    // Should be fixed by catpuccin theme extension v0.2.10 (which I can't install yet)
    "background.appearance": "opaque"
  },
  "ui_font_family": "JetBrains Mono NL",
  "ui_font_size": 15,
  "buffer_font_size": 14,
  "buffer_font_family": "JetBrains Mono NL",
  "project_panel": {
    "folder_icons": false,
    "file_icons": false,
    "indent_size": 10,
    "auto_fold_dirs": true
  },
  "terminal": {
    "blinking": "off",
    "dock": "bottom"
  },
  "double_click_in_multibuffer": "open",
  "tab_size": 2,
  "languages": {
    "Markdown": {
      "soft_wrap": "preferred_line_length",
      "preferred_line_length": 120
    },
    "Ruby": {
      "tab_size": 2,
      "wrap_guides": [100],
      "language_servers": ["ruby-lsp", "!solargraph"]
    }
  },
  "lsp": {
    "ruby-lsp": {
      "enabledFeatures": {
        "diagnostics": false
      },
      "initialization_options": {
        "diagnostics": true,
        "formatting": true
      }
    }
  },
  // Disable features
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "features": {
    "copilot": false,
    "inline_completion_provider": "none"
  },
  "collaboration_panel": {
    "button": false
  },
  "chat_panel": {
    "button": false
  },
  "assistant": {
    "enabled": false,
    "version": "2",
    "button": false
  },
  "assistant_v2": {
    "enabled": false
  }
}
