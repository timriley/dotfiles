// Place your settings in this file to overwrite the default settings
{
  "editor.fontFamily": "JetBrainsMono-Regular, Menlo, monospace",
  "editor.tabSize": 2,
  "editor.renderIndentGuides": true,
  "workbench.activityBar.visible": false,
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "editor.snippetSuggestions": "top",
  "files.exclude": {
    ".pry_history": true,
    "**/.byebug_history": true,
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.hg": true,
    "**/.svn": true,
    "**/*.log": true,
    "**/cdk.out": true,
    "**/node_modules": true,
    "assets/build/*": true,
    "coverage/**/*": true,
    "spec/examples.txt": true,
    "spec/junit.xml": true,
    "tmp/*": true,
    "tmp/**/capybara-*": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "assets/build": true,
    "public/assets": true
  },
  "editor.acceptSuggestionOnEnter": "on",
  "ruby.lint": {
    "ruby": true
  },
  "diffEditor.renderSideBySide": false,
  "git.autofetch": false,
  "window.zoomLevel": 0,
  "window.newWindowDimensions": "inherit",
  "workbench.editor.tabCloseButton": "off",
  "window.openFilesInNewWindow": "off",
  "workbench.quickOpen.closeOnFocusLost": false,
  "editor.minimap.enabled": false,
  "editor.minimap.renderCharacters": false,
  "editor.renderWhitespace": "none",
  "workbench.statusBar.visible": true,
  "editor.find.seedSearchStringFromSelection": false,
  "terminal.external.osxExec": "iTerm.app",
  "extensions.ignoreRecommendations": true,
  "editor.autoIndent": true,
  "docker.showExplorer": false, // Hide annoying sidebar section
  "workbench.startupEditor": "newUntitledFile",
  "explorer.confirmDragAndDrop": false,
  "editor.tokenColorCustomizations": {
    "[Espresso Soda]": {
      "textMateRules": [
        {
          "scope": "constant.other.symbol",
          "settings": {"fontStyle": ""}
        }
      ]
    },
  },
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.codeLens.enabled": false,
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.currentLine.enabled": false,
  "gitlens.advanced.messages": {
    "suppressResultsExplorerNotice": true,
    "suppressShowKeyBindingsNotice": true
  },
  "solargraph.diagnostics": false,
  "gitlens.historyExplorer.enabled": true,
  "gitlens.keymap": "alternate",
  "workbench.sideBar.location": "left",
  "workbench.statusBar.feedback.visible": false,
  "gitlens.menus": {
    "editor": {
      "blame": false,
      "clipboard": true,
      "compare": true,
      "details": true,
      "history": false,
      "remote": true
    },
    "editorGroup": false,
    "editorTab": {
      "compare": false,
      "history": false,
      "remote": true
    },
    "explorer": {
      "compare": true,
      "history": true,
      "remote": true
    }
  },
  "breadcrumbs.enabled": true,
  "breadcrumbs.symbolPath": "last",
  "explorer.confirmDelete": false,
  "gitlens.views.fileHistory.enabled": true,
  "gitlens.views.lineHistory.enabled": true,
  "[json]": {
    "editor.defaultFormatter": "HookyQR.beautify"
  },
  "workbench.tree.renderIndentGuides": "always",
  "workbench.tree.indent": 10,
  "workbench.iconTheme": "vs-minimal",
  "editor.fontSize": 13,
  "window.autoDetectColorScheme": true,
  "workbench.preferredLightColorTheme": "Alabaster",
  "search.enableSearchEditorPreview": true,
  "search.useGlobalIgnoreFiles": true
}
