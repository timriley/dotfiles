// Place your settings in this file to overwrite the default settings
{
  "editor.fontFamily": "JetBrainsMono-Regular, Menlo, monospace",
  "editor.fontSize": 15,
  "editor.tabSize": 2,
  "editor.stickyScroll.enabled": true,
  "editor.snippetSuggestions": "top",
  "editor.acceptSuggestionOnEnter": "on",
  "editor.minimap.enabled": false,
  "editor.minimap.renderCharacters": false,
  "editor.renderWhitespace": "none",
  "editor.autoIndent": "full",
  "terminal.integrated.fontSize": 15,
  "terminal.integrated.tabs.enabled": true,
  "breadcrumbs.symbolPath": "last",
  "diffEditor.renderSideBySide": false,
  "workbench.editor.tabCloseButton": "off",
  "workbench.quickOpen.closeOnFocusLost": false,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.tree.renderIndentGuides": "always",
  "workbench.tree.indent": 10,
  "workbench.iconTheme": "vs-minimal",
  "workbench.preferredLightColorTheme": "Alabaster",
  "workbench.editor.tabActionCloseVisibility": false,
  "workbench.colorTheme": "Alabaster",
  "window.newWindowDimensions": "inherit",
  "window.openFilesInNewWindow": "off",
  "window.autoDetectColorScheme": true,
  "search.useGlobalIgnoreFiles": true,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "git.autofetch": false,
  "extensions.ignoreRecommendations": true,
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.exclude": {
    ".pry_history": true,
    "**/.byebug_history": true,
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.hg": true,
    "**/.svn": true,
    "**/*.log": true,
    "**/cdk.out": true,
    "**/node_modules": true,
    "assets/build/*": true,
    "coverage/**/*": true,
    "spec/examples.txt": true,
    "spec/junit.xml": true,
    "tmp/*": true,
    "tmp/**/capybara-*": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "assets/build": true,
    "public/assets": true
  },
  "files.associations": {
    "*Brewfile*": "ruby",
    "Dockerfile.*": "dockerfile"
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[markdown]": {
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 100
  },
  "rubyLsp.rubyVersionManager": "custom",
  "rubyLsp.customRubyCommand": "eval \"$(mise env -s fish)\"",
  "rubyLsp.formatter": "rubocop",
  "rubyLsp.enableExperimentalFeatures": false,
  "rewrap.wholeComment": false,
  "rewrap.autoWrap.enabled": false,
  "rewrap.wrappingColumn": 100
}
