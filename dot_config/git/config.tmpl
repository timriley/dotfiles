[user]
  name = Tim Riley
  email = {{ .email }}
  signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIJVeJ3lQW5izwzDWUCoZMlnDTv9FahsJoHVlpQvpqxZe
[core]
  editor = code -n -w
  excludesfile = ~/.config/git/ignore
  autocrlf = input
  attributesfile = ~/.config/git/attributes
[color]
  ui = auto
[credential]
  helper = osxkeychain
[gpg]
  format = ssh
[gpg "ssh"]
  # See https://1password.community/discussion/131318/ssh-commit-signing
  program = {{ .chezmoi.homeDir }}/.config/git/gpg-ssh-program
[init]
  defaultBranch = main
[branch]
  sort = -committerdate
[commit]
  gpgsign = true
[push]
  default = current
  autoSetupRemote = true
[remote]
  pushDefault = origin
[fetch]
  prune = true
[merge "merge-structure-sql"]
  name = Rails structure.sql merge driver
  driver = git-merge-structure-sql %A %O %B
[alias]
  ap = add --patch
  co = checkout
