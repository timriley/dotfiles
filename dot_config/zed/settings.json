// Zed settings. See https://zed.dev/docs/configuring-zed.

{
  // EDITOR SETTINGS

  // I run in light mode 90% of the time. Catppuccin is nice for both modes.
  "theme": {
    "light": "Catppuccin Latte - No Italics",
    "dark": "Catppuccin Mocha - No Italics"
  },
  "icon_theme": {
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Mocha"
  },

  // iA Writer Quattro is nice for a UI font.
  "ui_font_family": "iA Writer Quattro V",
  "ui_font_size": 15,
  // I prefer simpler buffer text. No ligatures.
  "buffer_font_size": 14,
  "buffer_font_family": "JetBrains Mono NL",

  // We only have one lever for the agent panel text display, even though
  // several different font sizes are used. Crank it up to make the text input
  // area more comfortable.
  "agent_font_size": 18,

  // Keep my project panel simple.
  "project_panel": {
    "indent_size": 10, // Slightly less than default, for more compact nesting.
    "auto_fold_dirs": true,
    "indent_guides": {
      "show": "never"
    }
  },

  // Make the terminal match my Mac terminal.
  "terminal": {
    "blinking": "off",
    "line_height": "standard",
    "font_size": 15,
    "font_weight": 300
  },

  // I tend to use the multi-buffer to jump directly to the relevant files.
  "double_click_in_multibuffer": "open",

  // LANGUAGE SETTINGS

  "tab_size": 2,
  "languages": {
    "HTML": {
      "preferred_line_length": 120,
      "wrap_guides": [120]
    },
    "Markdown": {
      "preferred_line_length": 100,
      "soft_wrap": "preferred_line_length",
      "show_edit_predictions": false
    },
    "Ruby": {
      "tab_size": 2,
      "preferred_line_length": 100,
      "wrap_guides": [100],
      // Use ruby-lsp, not the Ruby extension's default of solargraph.
      "language_servers": ["ruby-lsp", "!solargraph"],
      "use_on_type_format": false // see https://github.com/zed-industries/zed/issues/16617
    }
  },

  // EDITOR FEATURES

  "agent": {
    "play_sound_when_agent_done": true,
    "always_allow_tool_actions": true,
    "default_profile": "write",
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    }
  },
  "features": {
    "edit_prediction_provider": "none"
  },

  // DISABLE FEATURES

  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "collaboration_panel": {
    "button": false
  },
  "chat_panel": {
    "button": "never",
    "dock": "left"
  }
}
